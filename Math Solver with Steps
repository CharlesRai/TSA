        //sets password to new input
        user.password = input;

        addUser(user);
    }

    private void addUser(User user){
        // adds a new user to an Arraylist

         users.add(user);
        user.setUserIndex(users.size() - 1);
    }

    private void printUserInfo(User User){
        System.out.println(User.getUserIndex());
    }
