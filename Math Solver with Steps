import java.awt.*;
import java.awt.event.*;
import javax.swing.*;
import javax.swing.event.ChangeEvent;
import javax.swing.event.ChangeListener;

public class MainGUI {
    JTextField problem;
    JTextArea answer;
    Buttons button = new Buttons();
    JFrame frame = new JFrame("Calculator");
    JPanel pane = new JPanel();
    TabbedPaneMaker tab = new TabbedPaneMaker();
    JTabbedPane tabbedPane = new JTabbedPane();
    MathOps mathOps = new MathOps();
    String prob;


    public void createAndShowGUI(){
//        answer.setEnabled(false);
        // closes program when frame is x'd out
        frame.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);

        //Adds two tabs for forum and Solver at top
        frame.add(new TabbedPaneMaker(), BorderLayout.BEFORE_FIRST_LINE);

        frame.setBounds(0,0,300,300);
        button.initializeButton(pane);
        final int[] currentTab = {0};
        final String[] currentProblem = new String[1];

        tabbedPane.addChangeListener(new ChangeListener() {
            @Override
            public void stateChanged(ChangeEvent e) {
              currentTab[0] = tabbedPane.getSelectedIndex();
              currentProblem[0] = problem.getText();

            }
        });

        System.out.println(currentTab);
        System.out.println(currentProblem);

        button.button.addActionListener(new ActionListener() {
            @Override
            public void actionPerformed(ActionEvent event) {
                if (event.getSource() == button.getButton( "Solve")){
                    System.out.println("Hello");

                    prob = problem.getText();
                    System.out.println(prob);
                    mathOps.steps(prob, answer);
                }
            }
        });

        frame.add(pane);
        //Display the window.
        frame.setVisible(true);
    }
}
